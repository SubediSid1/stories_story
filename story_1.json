      "title": "Lost Forever",
      "dialogues": [
        {
          "character": "Narrator",
          "text": "You sit and wait for hours, but no help comes. Eventually, you accept that you've missed your chance to find the treasure.",
          "choices": [
            {
              "text": "End the journey",
              "consequence": {
                "next_dialogue": null
              }
            }
          ]
        }
      ]
    },
